@model Counselors_Connect.Models.Visit

@{
    ViewData["Title"] = "Demo Page";
}
@* Demo Page *@

<!-- Filter -->
<div class="row mb-3">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                Filter Table
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filterVisitID">Visit ID:</label>
                            <input type="text" id="filterVisitID" class="form-control" placeholder="Enter Visit ID...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filterStudentID">Student ID:</label>
                            <input type="text" id="filterStudentID" class="form-control" placeholder="Enter Student ID...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filterCounselorID">Counselor ID:</label>
                            <input type="text" id="filterCounselorID" class="form-control" placeholder="Enter Counselor ID...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filterDate">Date:</label>
                            <input type="date" id="filterDate" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filterDescription">Description:</label>
                            <input type="text" id="filterDescription" class="form-control" placeholder="Enter Description...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filterFile">File:</label>
                            <input type="text" id="filterFile" class="form-control" placeholder="Enter File...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filterParentsCalled">Parents Called:</label>
                            <select id="filterParentsCalled" class="form-control">
                                <option value="">All</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="filterTopics">Topics:</label>
                            <input type="text" id="filterTopics" class="form-control" placeholder="Enter Topics...">
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-primary">Apply Filters</button>
                <button type="button" class="btn btn-secondary">Clear Filters</button>
            </div>
        </div>
    </div>
</div>



<!-- A table -->
<table class="table table-elements">
    <thead class="table-head">
        <tr class="table-row">
            <th class="table-header">VisitID</th>
            <th class="table-header">StudentID</th>
            <th class="table-header">CounselorID</th>
            <th class="table-header">Date</th>
            <th class="table-header">Description</th>
            <th class="table-header">File</th>
            <th class="table-header">ParentsCalled</th>
            <th class="table-header">Length</th>
            <th class="table-header">Topics</th>
            <th class="table-header">Actions</th> <!-- Added a header for actions -->
        </tr>
    </thead>
    <tbody>
        <tr class="table-row">
            <td class="table-cell">VisitID1</td>
            <td class="table-cell">StudentID1</td>
            <td class="table-cell">CounselorID1</td>
            <td class="table-cell">2024-07-18</td>
            <td class="table-cell">Description1</td>
            <td class="table-cell">File1</td>
            <td class="table-cell">Yes</td>
            <td class="table-cell">30 min</td>
            <td class="table-cell">Topic1, Topic2</td>
            <td class="table-cell">
                <a href="#" class="action-link">Edit</a> |
                <a href="#" class="action-link">Details</a> |
                <a href="#" class="action-link">Delete</a>
            </td>
        </tr>
        <!-- Repeat the above row structure for each table row -->
    </tbody>
</table>


<!-- Flagged Students -->
<table class="flagged-table table-elements">
    <thead class="table-head">
        <tr class="table-row">
            <th class="table-header">Student</th>
            <th class="table-header">ID</th>
            <th class="table-header"># of Visits</th>
            <th class="table-header">Actions</th> <!-- Added a header for actions -->
        </tr>
    </thead>
    <tbody>
        <tr class="table-row">
            <td class="table-cell">First Name, Last Name</td>
            <td class="table-cell">ID1</td>
            <td class="table-cell">5</td> <!-- Example number of visits -->
            <td class="table-cell">
                <a href="#" class="action-link">View Details</a> |
                <a href="#" class="action-link">Flag</a> |
                <a href="#" class="action-link">Remove Flag</a>
            </td>
        </tr>
        <!-- Repeat the above row structure for each flagged student -->
    </tbody>
</table>



<!-- A form --> 
<div class="row">
    <div class="form">
        <div class="col">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Visit ID -->
                <div class="form-group">
                    <label asp-for="VisitID" class="control-label"></label>
                    <input asp-for="VisitID" class="form-control" />
                    <span asp-validation-for="VisitID" class="text-danger"></span>
                </div>

                <!-- Student ID -->
                <div class="form-group">
                    <label asp-for="StudentID" class="control-label"></label>
                    <input asp-for="StudentID" class="form-control" />
                    <span asp-validation-for="StudentID" class="text-danger"></span>
                </div>

                <!-- Counselor ID -->
                <div class="form-group">
                    <label asp-for="CounselorID" class="control-label"></label>
                    <input asp-for="CounselorID" class="form-control" />
                    <span asp-validation-for="CounselorID" class="text-danger"></span>
                </div>

                <!-- Date -->
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- File upload -->
                <div class="form-group">
                    <label asp-for="File" class="control-label"></label>
                    <input asp-for="File" type="file" class="form-control-file" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>

                <!-- Parents Called Checkbox -->
                <div class="form-group checkbox">
                    <div class="form-check">
                        <input asp-for="ParentsCalled" class="form-check-input" />
                        <label asp-for="ParentsCalled" class="form-check-label"></label>
                    </div>
                    <span asp-validation-for="ParentsCalled" class="text-danger"></span>
                </div>

                <!-- Topics (List with checkboxes) (they are buttons for testing) -->
                <div class="form-group">
                    <label>Topics:</label>
                    <div class="checkbox-list">
                        <div class="form-check">
                            <input asp-for="Topics" type="button" class="form-check-input" value="Topic1" />
                            <label class="form-check-label">Topic 1</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Topics" type="button" class="form-check-input" value="Topic2" />
                            <label class="form-check-label">Topic 2</label>
                        </div>
                        <!-- Add more topics as needed -->
                    </div>
                    <span asp-validation-for="Topics" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>



<!-- Components -->


@section Scripts {
    <!-- React & React DOM-->
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <!-- Components -->
    
}